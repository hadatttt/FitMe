<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.pbl6.fitme.splash.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/loginFragment" />

        <action
            android:id="@+id/action_splash_to_register"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.pbl6.fitme.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_slash"
            app:destination="@id/splashFragment" />
        <action
            android:id="@+id/action_login_to_login_2"
            app:destination="@id/login2Fragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.pbl6.fitme.register.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_register_to_slash"
            app:destination="@id/splashFragment" />
    </fragment>

    <fragment
        android:id="@+id/login2Fragment"
        android:name="com.pbl6.fitme.login.Login2Fragment"
        android:label="Login"
        tools:layout="@layout/fragment_login_2">

        <action
            android:id="@+id/action_login_2_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_login_2_to_login_3"
            app:destination="@id/login3Fragment" />
    </fragment>

    <fragment
        android:id="@+id/login3Fragment"
        android:name="com.pbl6.fitme.login.Login3Fragment"
        android:label="Login"
        tools:layout="@layout/fragment_login_3">

        <action
            android:id="@+id/action_login_3_to_login_2"
            app:destination="@id/login2Fragment" />
    </fragment>
</navigation>