<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/rdsb4svpf8f"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rijy5ii5tstb_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="163dp"
                    >
                    <ImageView
                        android:id="@+id/rijy5ii5tstb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/r37a6efvkmce"
                        android:scaleType="fitXY"
                        />
                    <LinearLayout
                        android:paddingTop="149dp"
                        android:paddingBottom="94dp"
                        android:paddingHorizontal="81dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/rqsshxrg9dd"
                            android:layout_width="105dp"
                            android:layout_height="105dp"
                            android:layout_marginBottom="28dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/image"
                            app:shapeAppearanceOverlay="@style/RoundedImageStyle"/>

                        <TextView
                            android:id="@+id/rpcmywftggk"
                            android:textColor="#202020"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="40dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Hello, Romina!!"
                            />
                        <TextView
                            android:id="@+id/rejs54pxq56"
                            android:textColor="#000000"
                            android:textSize="19sp"
                            android:layout_marginBottom="31dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Type your password"
                            />
                        <LinearLayout
                            android:id="@+id/r9x5ozgu99jv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/rlltchy6qnep"
                                android:layout_width="49dp"
                                android:layout_height="50dp"
                                android:background="@drawable/cr10bf8f8f8"
                                android:layout_marginEnd="6dp"
                                android:orientation="vertical">
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/rxy5hhob68qn"
                                android:layout_width="49dp"
                                android:layout_height="50dp"
                                android:background="@drawable/cr10bf8f8f8"
                                android:layout_marginEnd="5dp"
                                android:orientation="vertical">
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/rvkf9g7675b"
                                android:layout_width="49dp"
                                android:layout_height="50dp"
                                android:background="@drawable/cr10bf8f8f8"
                                android:layout_marginEnd="6dp"
                                android:orientation="vertical">
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/rq7nybe2hhs"
                                android:layout_width="49dp"
                                android:layout_height="50dp"
                                android:background="@drawable/cr10bf8f8f8"
                                android:orientation="vertical">
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/rmmrer7ms3m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="69dp"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_back_login"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/ic_back"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@drawable/bg_circle_blue"
                        app:layout_constraintStart_toEndOf="@id/tv_text"
                        app:layout_constraintBottom_toBottomOf="@id/tv_text"
                        app:layout_constraintTop_toTopOf="@id/tv_text"/>
                    <TextView
                        android:id="@+id/rtpud6r9ibqj"
                        android:textColor="#202020"
                        android:textSize="15sp"
                        android:layout_marginEnd="19dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Not you?"
                        />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_next_login"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/ic_next"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@drawable/bg_circle_blue"
                        app:layout_constraintStart_toEndOf="@id/tv_text"
                        app:layout_constraintBottom_toBottomOf="@id/tv_text"
                        app:layout_constraintTop_toTopOf="@id/tv_text"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>