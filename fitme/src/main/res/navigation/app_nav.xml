<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.pbl6.fitme.splash.SplashFragment"
        android:label="Splash">
        <action
            android:id="@+id/action_splashFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.pbl6.fitme.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login"/>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.pbl6.fitme.register.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_splashFragment"
            app:destination="@id/splashFragment" />
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/helloFragment"
        android:name="com.pbl6.fitme.hello.HelloFragment"
        android:label="Hello"
        tools:layout="@layout/fragment_hello">
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.pbl6.fitme.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.pbl6.fitme.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
    </fragment>
    <fragment
        android:id="@+id/wishlistFragment"
        android:name="com.pbl6.fitme.wishlist.WishlistFragment"
        android:label="Wishlist"
        tools:layout="@layout/fragment_wishlist">
    </fragment>
    <fragment
        android:id="@+id/filterFragment"
        android:name="com.pbl6.fitme.filter.FilterFragment"
        android:label="Filter"
        tools:layout="@layout/fragment_filter">
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.pbl6.fitme.cart.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart">
    </fragment>
    <fragment
        android:id="@+id/checkoutFragment"
        android:name="com.pbl6.fitme.checkout.CheckoutFragment"
        android:label="Checkout"
        tools:layout="@layout/fragment_checkout">
    </fragment>
    <fragment
            android:id="@+id/settingsFragment"
            android:name="com.pbl6.fitme.settings.SettingsFragment"
            android:label="Settings"
            tools:layout="@layout/fragment_settings">
    </fragment>
    <fragment
            android:id="@+id/productDetailFragment"
            android:name="com.pbl6.fitme.product.ProductDetailFragment"
            android:label="Product Detail"
            tools:layout="@layout/fragment_product_detail">
    </fragment>
</navigation>