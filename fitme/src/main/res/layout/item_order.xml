<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/bg_card"
        android:layout_margin="8dp">

    <!-- Ảnh sản phẩm -->
    <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:layout_margin="@dimen/_10dp"
            android:src="@drawable/ic_splash"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/txtFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yêu thích"
            android:background="@drawable/bg_favorite"
            android:textColor="@android:color/white"
            android:padding="4dp"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/imgProduct"
            app:layout_constraintTop_toTopOf="@id/imgProduct"/>
    <!-- Tên shop -->
    <TextView
            android:id="@+id/txtShop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Riyu Mermaid"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/imgProduct"
            app:layout_constraintTop_toBottomOf="@id/txtFavorite"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Trạng thái -->
    <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery"
            android:textColor="@color/maincolor"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/txtShop"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tên sản phẩm -->
    <TextView
            android:id="@+id/txtProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Green top with bow | Áo xanh biển"
            android:textSize="13sp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/imgProduct"
            app:layout_constraintTop_toBottomOf="@id/txtShop"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Giá hiện tại -->
    <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50$"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/txtProductName"
            app:layout_constraintTop_toBottomOf="@id/txtProductName"/>

    <!-- Nút -->
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/txtPrice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <Button
                android:id="@+id/btnDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Order"
                android:textColor="@color/black"
                android:textColorHint="@color/blue2"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <Button
                android:id="@+id/btnState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Received"
                android:layout_marginStart="8dp"
                android:textColor="@color/maincolor"
                android:textColorHint="@color/blue2"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
