<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

        <!-- === HEADER: Shop Info & Status === -->

        <!-- Shop Name -->
        <TextView
                android:id="@+id/txtShop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:text="Riyu Official Store"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txtStatus"/>
        <!-- Lưu ý: ic_shop_small là icon cửa hàng nhỏ, nếu chưa có thì bỏ drawableStart -->

        <!-- Trạng thái đơn hàng -->
        <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivered"
                android:textColor="#FF6F00"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/txtShop"/>

        <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/txtShop"/>

        <!-- === BODY: Product Info === -->

        <!-- Ảnh sản phẩm -->
        <androidx.cardview.widget.CardView
                android:id="@+id/imgWrapper"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F5F5F5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider1">

            <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_splash"
                    tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <!-- Tên sản phẩm -->
        <TextView
                android:id="@+id/txtProductName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Áo xanh biển phong cách hàn quốc | Green top"
                android:textSize="14sp"
                android:textColor="#333333"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintStart_toEndOf="@id/imgWrapper"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/imgWrapper"
                app:layout_constraintBottom_toBottomOf="@+id/imgWrapper"
      />

        <!-- bg_badge_red: Shape chữ nhật bo tròn màu đỏ -->

        <!-- Giá tiền -->
        <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$50.00"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/llde"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/llde"/>

        <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/imgWrapper"/>

        <!-- === FOOTER: Action Buttons === -->

        <LinearLayout
                android:id="@+id/llde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/divider2"
                app:layout_constraintEnd_toEndOf="parent">

            <!-- Nút phụ (Outlined) -->
            <Button
                    android:id="@+id/btnDetail"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:text="Detail"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    app:strokeColor="#DDDDDD"
                    app:cornerRadius="4dp"
                    android:layout_marginEnd="8dp"/>

            <!-- Nút chính (Filled/Active) -->
            <Button
                    android:id="@+id/btnState"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:text="Received"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="#FF6F00"
                    app:cornerRadius="4dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>