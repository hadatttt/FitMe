<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/homeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F9FA"
        android:paddingTop="5dp">

    <LinearLayout
            android:id="@+id/toolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FitMe"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

        <LinearLayout
                android:id="@+id/searchContainer"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1"
                android:background="@drawable/bg_search_input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

            <ImageView
                    android:id="@+id/ivSearchIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    app:tint="#757575" />

            <EditText
                    android:id="@+id/etSearchInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Search items..."
                    android:imeOptions="actionSearch"
                    android:paddingStart="8dp"
                    android:singleLine="true"
                    android:textColor="#212121"
                    android:textColorHint="#9E9E9E"
                    android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layoutGenderTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@id/toolbarLayout">

        <TextView
                android:id="@+id/tvTabWoman"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="WOMAN"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/tvTabMan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MAN"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/tvTabKid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="KID"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                android:textStyle="bold" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerCategoryMode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/layoutGenderTabs"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:id="@+id/tvCatHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collections"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategories"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvCatHeader"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/item_category" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerProductMode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:background="#F8F9FA"
            app:layout_constraintTop_toBottomOf="@id/layoutGenderTabs"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toTopOf="parent">

            <ImageView
                    android:id="@+id/btnCloseProductMode"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_close"
                    app:tint="#333333"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            <TextView
                    android:id="@+id/tvAllItems"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Selected Category"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            <ImageView
                    android:id="@+id/ivFilter"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Filter"
                    android:src="@drawable/ic_filter_black" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvItems"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:paddingHorizontal="8dp"
                android:paddingBottom="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleLayout"
                tools:listitem="@layout/item_product" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
            android:id="@+id/btn_slot"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_slot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_60sdp"
            />


    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/giftLottie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:lottie_autoPlay="true"
            android:visibility="gone"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/gif" />

</androidx.constraintlayout.widget.ConstraintLayout>