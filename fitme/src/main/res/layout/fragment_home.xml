<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/homeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F9FA"
        android:paddingTop="5dp">

    <LinearLayout
            android:id="@+id/toolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FitMe"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

        <LinearLayout
                android:id="@+id/searchContainer"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1"
                android:background="@drawable/bg_search_input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

            <ImageView
                    android:id="@+id/ivSearchIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    app:tint="#757575" />

            <EditText
                    android:id="@+id/etSearchInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Search items..."
                    android:imeOptions="actionSearch"
                    android:paddingStart="8dp"
                    android:singleLine="true"
                    android:textColor="#212121"
                    android:textColorHint="#9E9E9E"
                    android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/layoutGenderTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@id/toolbarLayout">

        <TextView
                android:id="@+id/tvTabWoman"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="WOMAN"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/tvTabMan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MAN"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/tvTabKid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="KID"
                android:textColor="#9E9E9E"
                android:textSize="16sp"
                android:textStyle="bold" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingBottom="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/layoutGenderTabs"
            tools:listitem="@layout/item_category" />

    <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toBottomOf="@id/rvCategories">

        <TextView
                android:id="@+id/tvAllItems"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="New Arrivals"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        <ImageView
                android:id="@+id/ivFilter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Filter"
                android:src="@drawable/ic_filter_black" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvItems"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingHorizontal="8dp"
            android:paddingBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleLayout"
            tools:listitem="@layout/item_product" />

<ImageView
        android:id="@+id/btn_slot"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/ic_slot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintHeight_percent="0.2"
    />
    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/giftLottie"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/gif" />

</androidx.constraintlayout.widget.ConstraintLayout>