<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".order.OrdersFragment">

    <!-- Thanh tiêu đề -->
    <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_back"
                android:layout_marginStart="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/bg_circle_blue"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your orders"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Thanh chọn trạng thái đơn hàng -->
    <HorizontalScrollView
            android:id="@+id/scrollTabs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/layoutHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    style="@style/TabStyle"
                    android:id="@+id/tv_tab_pending"
                    android:text="Chờ xác nhận" />

            <TextView
                    style="@style/TabStyle"
                    android:id="@+id/tv_tab_packing"
                    android:text="Chờ lấy hàng" />

            <TextView
                    style="@style/TabStyle"
                    android:id="@+id/tv_tab_processing"
                    android:text="Chờ giao hàng" />

            <TextView
                    style="@style/TabStyle"
                    android:id="@+id/tv_tab_delivered"
                    android:text="Đã giao" />

            <TextView
                    style="@style/TabStyle"
                    android:id="@+id/tv_tab_returned"
                    android:text="Trả hàng" />

            <TextView
                    style="@style/TabStyle"
                    android:id="@+id/tv_tab_cancelled"
                    android:text="Đã huỷ"
                    android:textColor="@color/red" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Danh sách đơn hàng -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerOrders"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/scrollTabs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <!-- View hiển thị khi giỏ hàng rỗng -->
    <LinearLayout
            android:id="@+id/emptyView_order"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/scrollTabs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone">

        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_cart"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empty order"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="12dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
