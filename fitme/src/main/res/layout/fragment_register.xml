<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    tools:context=".register.RegisterFragment">

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="Create Account"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <ImageView
        android:id="@+id/iv_upload"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/upload_photo"
        android:background="@drawable/circle_shape"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="@+id/tv_login"
        app:layout_constraintTop_toBottomOf="@+id/tv_login" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_white"
        android:hint="Email"
        android:inputType="text"
        android:padding="@dimen/_10sdp"
        android:textColor="#D2D2D2"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_upload" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_white"
        android:hint="Password"
        android:inputType="text"
        android:padding="@dimen/_10sdp"
        android:textColor="#D2D2D2"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email" />
    <LinearLayout
        android:id="@+id/phoneInputLayout"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/cr59bf8f8f8"
        android:paddingVertical="16dp"
        android:paddingHorizontal="19dp"
        android:layout_marginBottom="52dp"
        android:layout_marginHorizontal="20dp">

        <!-- Country Code Picker: có cờ, mã quốc gia, mũi tên xổ xuống -->
<!--        <com.hbb20.CountryCodePicker-->
<!--            android:id="@+id/countryCodePicker"-->
<!--            android:layout_width="@dimen/_40sdp"-->
<!--            android:layout_height="@dimen/_30sdp"-->
<!--            app:ccpDialog_showTitle="true"-->
<!--            app:ccpDialog_showFlag="true"-->
<!--            app:ccpDialog_showNameCode="true"-->
<!--            app:ccpDialog_showPhoneCode="true"/>-->


        <!-- Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="23dp"
            android:background="#1E1E1E"
            android:layout_marginEnd="13dp" />

        <!-- Ô nhập số điện thoại -->
        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Your number"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:inputType="phone"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eye_slash"
        app:layout_constraintTop_toTopOf="@id/et_password"
        app:layout_constraintEnd_toEndOf="@id/et_password"
        app:layout_constraintBottom_toBottomOf="@id/et_password"
        android:layout_margin="@dimen/_10sdp"/>

    <LinearLayout
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_button"
        android:clickable="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="17dp"
        app:layout_constraintTop_toBottomOf="@+id/phoneInputLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="#F3F3F3"
            android:textSize="22sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/btn_done"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>