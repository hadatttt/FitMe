<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F6FA"
        tools:context=".cart.CartFragment">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/bg_circle_blue"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/thump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo2_semibold"
            android:text="Checkout"
            android:textColor="#333333"
            android:textSize="@dimen/_24sdp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_back" />

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/layoutPay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/thump">

        <LinearLayout
                android:id="@+id/layoutContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingBottom="@dimen/_20sdp">

            <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"
                    android:text="Shipping Address"
                    android:fontFamily="@font/baloo2_semibold"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            <LinearLayout
                    android:id="@+id/layoutShipping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bluelight"
                    android:elevation="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="15dp">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/txtShippingAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="4dp"
                            android:text="26, Duong So 2, Thao Dien Ward, An Phu, District 2, Ho Chi Minh city"
                            android:textColor="#555555"
                            android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                        android:id="@+id/btnEditAddress"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/pen" />
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="20dp"
                    android:text="Contact Info"
                    android:fontFamily="@font/baloo2_semibold"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            <LinearLayout
                    android:id="@+id/layoutContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bluelight"
                    android:elevation="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="15dp">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/txtRecipientName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RecipientName"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                    <TextView
                            android:id="@+id/txtPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="0704407803"
                            android:textColor="#555555"
                            android:textSize="13sp" />

                    <TextView
                            android:id="@+id/txtEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="myle15082004@gmail.com"
                            android:textColor="#555555"
                            android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                        android:id="@+id/btnEditContact"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/pen"
 />
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="20dp"
                    android:text="Order Items"
                    android:fontFamily="@font/baloo2_semibold"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bluelight"
                    android:clipToPadding="false"
                    android:elevation="2dp"
                    android:nestedScrollingEnabled="false"
                    android:padding="5dp" />


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="20dp"
                    android:text="Promo Code"
                    android:fontFamily="@font/baloo2_semibold"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            <LinearLayout
                    android:id="@+id/layoutVoucher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bluelight"
                    android:elevation="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_edit"
                        app:tint="@color/blue1"
                        tools:src="@drawable/ic_edit"/>

                <EditText
                        android:id="@+id/etVoucherCode"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Enter voucher code"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:inputType="textCapCharacters"
                        android:textColor="#333333"
                        android:textColorHint="#999999" />

                <TextView
                        android:id="@+id/btnApplyVoucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_circle_blue"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="8dp"
                        android:text="Apply"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="20dp"
                    android:text="Shipping Options"
                    android:fontFamily="@font/baloo2_semibold"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            <LinearLayout
                    android:id="@+id/layoutShippingOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bluelight"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:padding="15dp">

                <RadioGroup
                        android:id="@+id/rgShippingOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <RadioButton
                            android:id="@+id/rbStandard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/bg_shipping_selected"
                            android:buttonTint="@color/blue1"
                            android:paddingStart="10dp"
                            android:paddingVertical="8dp"
                            android:text="Standard (5-7 days) - Free"
                            android:textColor="#333333" />

                    <RadioButton
                            android:id="@+id/rbExpress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_shipping_unselected"
                            android:buttonTint="@color/blue1"
                            android:paddingStart="10dp"
                            android:paddingVertical="8dp"
                            android:text="Express (1-2 days) - $12.00"
                            android:textColor="#333333" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="20dp"
                    android:text="Payment"
                    android:fontFamily="@font/baloo2_semibold"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            <LinearLayout
                    android:id="@+id/layoutPaymentMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bluelight"
                    android:elevation="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="15dp">

                <TextView
                        android:id="@+id/txtPaymentMethod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Credit/Debit Card"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                <ImageView
                        android:id="@+id/btnEditPayment"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_edit"
                        app:tint="@color/blue1" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="16dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
                android:id="@+id/layoutTotalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Payment"
                    android:textColor="#888888"
                    android:textSize="12sp" />

            <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$150.00"
                    android:textColor="@color/blue1"
                    android:textSize="20sp"
                    android:textStyle="bold" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle_blue"
                android:paddingHorizontal="40dp"
                android:text="Checkout"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>