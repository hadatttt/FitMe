<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/bg_circle_blue"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        <FrameLayout
            android:id="@+id/imgDiamond"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_30ssp"
            android:background="@drawable/bg_circle_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_diamond"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@drawable/ic_coin"
            app:layout_constraintBottom_toBottomOf="@id/imgDiamond"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="@id/imgDiamond"
            app:layout_constraintTop_toTopOf="@id/imgDiamond"
            app:layout_constraintWidth_percent="0.1" />
        <TextView
            android:id="@+id/tv_diamond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="@id/imgDiamond"
            app:layout_constraintEnd_toEndOf="@id/imgDiamond"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toEndOf="@id/iv_diamond"
            app:layout_constraintTop_toTopOf="@id/imgDiamond" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.example.slotmachinegame.imageviewscrolling.SlotMachineView
        android:id="@+id/slotMachine"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSpinsLeft"/>

    <FrameLayout
        android:id="@+id/btnspin"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slotMachine"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintDimensionRatio="w,40:135">

        <ImageView
            android:id="@+id/btn_pk_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/text_btn_pk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_50sdp"
            android:gravity="center_vertical"
            android:fontFamily="@font/baloo2_semibold"
            android:text="Spin"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSpinsLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle_blue"
        android:backgroundTint="@color/blue1"
        android:ellipsize="end"
        android:fontFamily="@font/baloo2_semibold"
        android:gravity="center"
        android:maxLines="1"
        android:paddingVertical="@dimen/_8dp"
        android:paddingHorizontal="@dimen/_30sdp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintTop_toBottomOf="@id/top_nav"
        app:layout_constraintEnd_toEndOf="@id/slotMachine"
        app:layout_constraintStart_toStartOf="@id/slotMachine" />

</androidx.constraintlayout.widget.ConstraintLayout>
