<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_5sdp"
    tools:context=".profile.ProfileFragment">

    <LinearLayout
        android:id="@+id/ll_first"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="4">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/_30sdp"
            android:src="@drawable/image"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_circle_while"
            android:layout_weight="1"/>

        <!-- My Activity -->
        <Button
            android:id="@+id/btnMyActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Activity"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_20sdp"
            android:backgroundTint="#004CFF"/>

        <!-- Icon thông báo -->
        <ImageView
            android:id="@+id/btnVoucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:src="@drawable/ic_voucher" />

        <!-- Icon thông báo -->
        <ImageView
            android:id="@+id/btnNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:src="@drawable/ic_notification" />

        <!-- Icon cài đặt -->
        <ImageView
            android:id="@+id/btnSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:src="@drawable/ic_setting"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/txtHello"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_first"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:text="Hello, Romina!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>
    <!-- Nội dung chính -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/txtHello"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <!-- Announcement -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_bluelight"
                android:padding="12dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Announcement: Lorem ipsum dolor sit amet..."
                    android:textSize="14sp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_see_all_notification"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/ic_next"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/bg_circle_blue"/>

            </LinearLayout>

            <!-- Top Products -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Products"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTopProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />

            <!-- Stories -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stories"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvStories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <!-- New Items bên trái -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Items"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_gravity="start"/>

                <!-- See All + Icon bên phải -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:textStyle="bold"
                        android:textColor="#004CFF"
                        android:textSize="18sp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_see_all_new_items"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/ic_next"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@drawable/bg_circle_blue"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvNewItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fl_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_30sdp"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_shopping"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/shop" />

        <TextView
            android:id="@+id/tv_cart_badge"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="top|end"
            android:fontFamily="@font/baloo2_semibold"
            android:gravity="center"
            android:text="1"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:visibility="visible" />

    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
